@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<form id="profile-form" method="post" class="max-w-md">
    <partial name="_StatusMessage" for="StatusMessage" />

    <div asp-validation-summary="ModelOnly" class="@Classes.ValidationSummary" role="alert"></div>

    <div class="grid gap-y-4">
        <!-- Form Group -->
        <div>
            <div class="flex justify-between items-center">
                <label asp-for="Username"
                       class="@Classes.TextInputLabel">@Html.DisplayNameFor(m => m.Username)</label>
            </div>
            <div class="relative">
                <input asp-for="Username" type="text"
                       aria-required="true"
                       class="@Classes.TextInputField"
                       disabled>

            </div>
            <span asp-validation-for="Username" class="@Classes.ErrorMessage"></span>
        </div>
        <!-- End Form Group -->
        <!-- Add additional user properties using this form group block (after adding to Input model) -->
        <!-- Form Group -->
        <div>
            <div class="flex justify-between items-center">
                <label asp-for="Input.PhoneNumber"
                       class="@Classes.TextInputLabel">@Html.DisplayNameFor(m => m.Input.PhoneNumber)</label>
            </div>
            <div class="relative">
                <input asp-for="Input.PhoneNumber" type="text"
                       aria-required="true"
                       class="@Classes.TextInputField"
                       required>

            </div>
            <span asp-validation-for="Input.PhoneNumber" class="@Classes.ErrorMessage"></span>
        </div>
        <!-- End Form Group -->

        <div class="flex flex-row items-center">
            <button type="submit" class="@Classes.LargePrimaryButton">Save</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
