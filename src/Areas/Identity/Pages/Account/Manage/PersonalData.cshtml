@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}


<div class="max-w-md">

    <div class="grid gap-y-6 ">
        <div class="grid gap-y-2">
            <p class="prose dark:prose-invert">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>

            <form method="post" asp-page="DownloadPersonalData">
                <button class="@Classes.LargePrimaryButtonFullWidth" type="submit">Download personal data</button>
            </form>
        </div>

        <div class="grid gap-y-2">
            <p class="prose dark:prose-invert">
                Deleting this data will permanently remove your account, and this cannot be recovered.
            </p>
            <p>
                <a id="delete" asp-page="DeletePersonalData" class="@Classes.LargeDangerButtonFullWidth">Delete account</a>
            </p>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
